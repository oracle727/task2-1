<body class=book>
<p class="notice">
 <%= flash[:notice] %></p>
<h1>Books</h1>

<table>
<thead>
    <tr>

<th>Title</th>

<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>

<% @books.each do |book| %>
<tr>
<td><span><%= book.title %></span></td>
<td><span><%= book.body %></span></td>
<td><span><%= link_to 'show',book_path(book.id) %></td>
<td><span><%= link_to 'edit',edit_book_path(book.id) %></td>
<td><span> <%= link_to 'destroy', book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>



<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>


<%= form_with model:@book, local:true do |f| %>


<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<br><%= f.submit 'Create Book' %>

<% end %>

</body>


